*
    box-sizing: border-box

body
    background: $bg
    font-family: $font-family-mono
    text-align: center
    color: $color-text
    margin: 0 20px

svg
    display: block
    margin: 0

.container
    position: relative
    display: block
    max-width: 1100px
    width: 100%
    margin: auto
    padding: 0
    
    &:before
      padding-top: 50%
      content: ' '
      display: block
      width: 1px

    svg
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        
h1
    font-weight: normal
    padding: 60px 0 0
    font-size: 24px
    color: #239C9C
    color: #fff

    + p
        margin: auto
        padding: 0 0 40px
        font-size: 14px

.credit
    max-width: 700px
    padding: 40px 0 80px
    text-align: center
    color: $color-text-credit
    font-size: 11px
    line-height: 1.6
    font-weight: 300
    margin: auto

    a
        color: $color-text-credit
        text-decoration: underline

        &:hover
            color: lighten(#59648e, 20%)


.controls
    position: absolute
    right: 0
    top: 0
    width: 160px
    color: #fff

    &:before
        position: absolute
        top: 0
        right: 0
        background-image: linear-gradient(to left, #DF5862, #F3B142)
        display: block
        height: 3px
        width: calc(100% - 10px)
        content: ''

    p
        margin: 0

    .curr-time
    .curr-date
        margin-top: 20px
        font-size: 0
        cursor: default

    .curr-date
    .curr-time
        position: relative

        > span
            display: inline-block
            width: 80px
            line-height: 36px
            height: 100%
            font-size: 20px

        > span > span
            position: absolute
            font-size: 10px
            top: -20px
            opacity: 0.5
            font-weight: 300
            letter-spacing: 1px
            right: 48px

        &:hover
            a
                opacity: 0.4

                &.big-jump
                    opacity: 0.4

        a
            color: #fff
            opacity: 0.2
            text-decoration: none
            font-size: 16px
            width: 15px
            display: inline-block
            vertical-align: top
            height: 100%
            line-height: 36px

            &:hover
                opacity: 0.8 !important

            &.big-jump
                opacity: 0

    .curr-date
        margin-top: -10px
        text-transform: uppercase

        > span
            font-size: 14px
            opacity: 0.5

.animate
    text-align: center
    font-family: $font-family-mono

    a
        display: inline-block
        width: auto
        font-size: 11px
        font-weight: 600
        text-align: center
        color: #59648e
        line-height: 16px
        text-transform: uppercase
        padding: 4px 10px
        width: 130px
        text-decoration: none
        border: solid 1px darken($color-text-credit, 30%)
        font-weight: 300

        &:hover
            color: lighten($color-text-credit, 30%)
            border: solid 1px darken($color-text-credit, 10%)

        &:before
            content: 'Animation Off'

        &.animating
            color: lighten($color-text-credit, 30%)

            &:hover
                color: lighten($color-text-credit, 40%)

            &:before
                content: 'Animation On'
